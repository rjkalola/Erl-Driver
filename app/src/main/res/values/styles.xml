<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ParentViewPadding">
        <item name="android:padding">@dimen/_8sdp</item>
    </style>

    <style name="ExtraLargeFont">
        <item name="android:textSize">@dimen/_28ssp</item>
    </style>

    <style name="LargeFont">
        <item name="android:textSize">@dimen/_22ssp</item>
    </style>

    <style name="MediumFont">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="SmallFont">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="VerySmallFont">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="ToolbarTitleFont">
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>

    <style name="ExtraLargeTextView" parent="ExtraLargeFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LargeTextView" parent="LargeFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MediumFontTextView" parent="MediumFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SmallFontTextView" parent="SmallFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="VerySmallFontTextView" parent="VerySmallFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- This theme for splash screen-->
    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="AlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/colorWhite</item>
    </style>


    <style name="ToolbarDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textAllCaps">false</item>
    </style>

    <!--        <style name="LightTheme" parent="AppTheme">-->

    <!--        </style>-->

    <!--        <style name="DarkTheme" parent="AppTheme">-->

    <!--        </style>-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyDialogFragmentStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
