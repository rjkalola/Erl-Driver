<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!-- 100    Extra Light or Ultra Light
     200    Light or Thin
     300    Book or Demi
     400    Normal or Regular
     500    Medium
     600    Semibold, Demibold
     700    Bold
     800    Black, Extra Bold or Heavy
     900    Extra Black, Fat, Poster or Ultra Black-->


    <!-- light -->
    <font
        android:font="@font/montserrat_light"
        android:fontStyle="normal"
        android:fontWeight="200"

        app:font="@font/montserrat_light"
        app:fontStyle="normal"
        app:fontWeight="200" />

    <!-- regular -->
    <font
        android:font="@font/montserrat_regular"
        android:fontStyle="normal"
        android:fontWeight="400"

        app:font="@font/montserrat_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- medium -->
    <font
        android:font="@font/montserrat_medium"
        android:fontStyle="normal"
        android:fontWeight="500"

        app:font="@font/montserrat_medium"
        app:fontStyle="normal"
        app:fontWeight="500" />

    <!-- bold -->
    <font
        android:font="@font/montserrat_semi_bold"
        android:fontStyle="normal"
        android:fontWeight="600"

        app:font="@font/montserrat_semi_bold"
        app:fontStyle="normal"
        app:fontWeight="600" />

    <!-- bold -->
    <font
        android:font="@font/montserrat_bold"
        android:fontStyle="normal"
        android:fontWeight="700"

        app:font="@font/montserrat_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />
</font-family>