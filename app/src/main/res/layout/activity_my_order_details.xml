<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="info"
            type="com.app.erldriver.model.entity.response.OrderDetailsResponse" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".DashboardActivity">

        <LinearLayout
            android:id="@+id/routHeaderView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/img_order_items_header_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:gravity="center"
                    android:text="@string/lbl_pick_up_details"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/_16ssp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgBack"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:padding="@dimen/_4sdp"
                    app:srcCompat="@drawable/ic_arrow_back" />

            </RelativeLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/routMainView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/routBottomView"
            android:layout_below="@+id/routHeaderView"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/routDetailsView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_28sdp"
                android:orientation="vertical"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_20sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtOrderNumberTitle"
                        style="@style/SmallFontTextView"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/lbl_pick_up_order_number"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_12ssp" />

                    <TextView
                        android:id="@+id/txtOrderNumber"
                        style="@style/SmallFontTextView"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@{info.order_no}"
                        android:textColor="@color/colorSecondaryText"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

                <View
                    android:id="@+id/divider"
                    style="@style/Divider"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/colorYellowDark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/SmallFontTextView"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="@string/lbl_name"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            style="@style/SmallFontTextView"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@{info.name}"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/SmallFontTextView"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="@string/lbl_mobile_number"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            style="@style/SmallFontTextView"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@{info.phone}"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            style="@style/SmallFontTextView"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:text="@string/lbl_email"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/_10ssp" />

                        <TextView
                            style="@style/SmallFontTextView"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@{info.email}"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        style="@style/SmallFontTextView"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/lbl_address"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/txtAddress"
                        style="@style/SmallFontTextView"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingStart="0dp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_10ssp" />

                    <LinearLayout
                        android:id="@+id/routTrack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/img_track_bg"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:paddingEnd="@dimen/_6sdp"
                        android:paddingBottom="@dimen/_3sdp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:textSize="@dimen/_11ssp"
                            android:tint="@color/colorYellowDark"
                            app:srcCompat="@drawable/img_map_pin_red" />

                        <TextView
                            style="@style/SmallFontTextView"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/lbl_track"
                            android:textAllCaps="true"
                            android:textColor="@color/colorYellowDark"
                            android:textSize="@dimen/_9ssp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:textSize="@dimen/_11ssp"
                            android:tint="@color/colorYellowDark"
                            app:srcCompat="@drawable/ic_arrow_forward" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/routDeliveryNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/SmallFontTextView"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/lbl_delivery_note"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/txtOrderNote"
                        style="@style/SmallFontTextView"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@{info.delivery_note}"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/SmallFontTextView"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/lbl_delivery_time"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_10ssp" />

                    <TextView
                        android:id="@+id/txtDeliveryTime"
                        style="@style/SmallFontTextView"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@{info.pickup_time}"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/routOrderSummery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/SmallFontTextView"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/lbl_order_summery"
                        android:textAllCaps="true"
                        android:textColor="@color/colorYellowDark"
                        android:textSize="@dimen/_10ssp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvOrderItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/routBottomView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorViewBg"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_12sdp">

                    <TextView
                        style="@style/SmallFontTextView"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/lbl_total_paces"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/txtTotalPaces"
                        style="@style/SmallFontTextView"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="39"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@color/colorSecondaryLightText" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <TextView
                        style="@style/SmallFontTextView"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="@string/lbl_total_price"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_11ssp" />

                    <TextView
                        android:id="@+id/txtTotalPrice"
                        style="@style/SmallFontTextView"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:text="39"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>
            </LinearLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:id="@+id/btnConfirmOrder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimaryText"
                app:mrl_rippleColor="#2C7A7A7A"
                app:mrl_rippleDelayClick="false"
                app:mrl_rippleDuration="100"
                app:mrl_rippleOverlay="true">

                <TextView
                    android:id="@+id/txtConfirmOrder"
                    style="@style/SmallFont"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="@string/lbl_cancel"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_14ssp" />
            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>
    </RelativeLayout>

</layout>